{
  "name": "mechanic_website_daniel",
  "version": "1.0.0",
  "description": "Mechanic shop website for Daniel",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:full": "npm run build && cd client && npm install && npm run build",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "client": "cd client && npm start",
    "frontend:only": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "db:init": "ts-node src/scripts/initDatabase.ts",
    "heroku-postbuild": "npm run build:full",
    "postinstall": "cd client && npm install"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^6.17.0",
    "mongoose": "^7.8.7",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.7",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  },
  "private": true
}
